    <formulas>
        <description>35 char limit</description>
        <name>liberReference</name>
        <dataType>String</dataType>
        <expression>LEFT({!Loop_through_products_Char_Limit.CustomerReference__c}, 35)</expression>
    </formulas>
    <formulas>
        <description>10 char limit</description>
