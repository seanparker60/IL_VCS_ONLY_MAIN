        <dataType>String</dataType>
        <expression>LEFT({!Loop_through_products_Char_Limit.CustomerReference__c}, 30)</expression>
    </formulas>
    <formulas>
        <name>referenceMax</name>
        <dataType>String</dataType>
        <expression>IF(OR(AND(CONTAINS({!Get_Order.Pricebook2.Name}, &apos;Plantyn&apos;), NOT(CONTAINS({!Get_Order.Pricebook2.Name}, &apos;Informat&apos;))), AND(CONTAINS({!Get_Order.Pricebook2.Name}, &apos;Noordhoff&apos;), NOT(CONTAINS({!Get_Order.Pricebook2.Name}, &apos;Professional&apos;)))), &apos;30&apos;,
IF(CONTAINS({!Get_Order.Pricebook2.Name}, &apos;Liber&apos;),&apos;35&apos;, 
IF(AND(CONTAINS({!Get_Order.Pricebook2.Name}, &apos;Professional&apos;), {!Get_Order.InventoryItemShippingAddressCount__c} &gt; 0), &apos;30&apos;, 
IF(AND(CONTAINS({!Get_Order.Pricebook2.Name}, &apos;Professional&apos;), OR({!Get_Order.InventoryItemShippingAddressCount__c} = 0, ISBLANK({!Get_Order.InventoryItemShippingAddressCount__c}))), &apos;255&apos;, &apos;45&apos;))))</expression>
    </formulas>
